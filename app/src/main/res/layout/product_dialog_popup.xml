<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/product_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="产品名称"
            android:textColor="@color/whiteRad"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_marginTop="90dp"

            />

        <TextView
            android:id="@+id/product_dialog_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="产品价格"
            android:textColor="@color/whiteRad"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"

            />

        <Button
            android:id="@+id/dialog_product_btn_call_edit"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteRad"

            android:drawableLeft="@drawable/card_edit"
            android:text="修改"
            android:textSize="18dp"
            android:textColorHighlight="@color/whitereal"
            android:textColor="@color/blackreal"/>
        <Button
            android:id="@+id/dialog_product_btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteRad"
            android:textSize="18dp"
            android:drawableLeft="@drawable/delete_card"

            android:padding="20dp"
            android:text="删除"/>


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/product_dialog_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_background"
        android:padding="10dp"
        android:layout_centerHorizontal="true"

        android:layout_alignParentTop="true"

        />







</RelativeLayout>

