<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".product_info_edit">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"


            app:layout_constraintBottom_toTopOf="@+id/cardView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout

                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            >



                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="146dp"

                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_img_choose"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/account_man"
                        app:civ_border_color="?attr/civ_border_color"
                        app:civ_border_overlay="false"
                        app:civ_border_width="3dp"
                        app:civ_fill_color="@android:color/holo_blue_light"

                    app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical"
                        android:gravity="bottom">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btn_upload_webdata"
                                android:layout_width="46dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/btn_save_style"
                                android:src="@drawable/account_man"
                                android:text="@string/btnsavetitle"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="horizontal">



                            <TextView
                                android:id="@+id/civ_et_name"
                                android:layout_width="100dp"
                                android:layout_height="46dp"
                                android:layout_marginStart="8dp"
                                android:ems="10"
                                android:gravity="center_horizontal|center_vertical"
                                android:hint="@string/clientitle"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/blacktitle"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <ImageView
                                android:id="@+id/imageButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="38dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/ic_baseline_qr_code_2_24"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />


                        </LinearLayout>


                        <EditText
                            android:id="@+id/civ_kid_name"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:drawableRight="@drawable/ic_baseline_edit_24"
                            android:hint="@string/kittitle"
                            android:importantForAutofill="no"
                            android:inputType="textPersonName"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                    tools:ignore="MissingConstraints">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">


                        <EditText
                            android:id="@+id/civ_et_dec"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:drawableLeft="@drawable/ic_baseline_assignment_24"
                            android:drawableRight="@drawable/ic_baseline_edit_24"
                            android:ems="10"


                            android:hint="@string/mantitle"
                            android:importantForAutofill="no"
                            android:inputType="textMultiLine"

                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/civ_et_mobile"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                            tools:ignore="RtlHardcoded" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"

                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView6">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <EditText
                                android:id="@+id/civ_et_mobile"
                                android:layout_width="0dp"
                                android:layout_height="45dp"

                                android:layout_marginEnd="16dp"
                                android:background="@null"
                                android:drawableLeft="@drawable/ic_baseline_call_24"
                                android:drawableRight="@drawable/ic_baseline_edit_24"

                                android:ems="10"
                                android:hint="@string/strtel"
                                android:importantForAutofill="no"
                                android:inputType="number|phone"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="@+id/civ_et_email"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/civ_et_email"
                                app:layout_constraintTop_toTopOf="@+id/civ_et_email"
                                tools:ignore="RtlHardcoded" />

                            <EditText
                                android:id="@+id/civ_et_email"
                                android:layout_width="180dp"
                                android:layout_height="45dp"
                                android:layout_marginStart="16dp"
                                android:background="@null"
                                android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                                android:ems="10"

                                android:hint="@string/mailtitle"
                                android:importantForAutofill="no"
                                android:inputType="textEmailAddress"
                                android:textSize="14sp"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/cardView5">

                        <EditText
                            android:id="@+id/civ_et_address"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="16dp"
                            android:drawableRight="@drawable/ic_baseline_edit_24"
                            android:layout_marginEnd="16dp"
                            android:background="@null"
                            android:drawableLeft="@drawable/ic_baseline_room_24"
                            android:ems="10"

                            android:hint="@string/addrtitle"
                            android:importantForAutofill="no"
                            android:inputType="textPostalAddress"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/card_view4"
        tools:layout_editor_absoluteX="16dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button2"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/msgtitle"
                app:layout_constraintTop_toBottomOf="@+id/civ_et_address"
                tools:layout_editor_absoluteX="16dp"
                app:drawableStartCompat="@drawable/ic_forum_black_24dp" />

            <Switch

                android:id="@+id/civ_msgS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text=""

                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_msg1"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/searchtitle"
                app:drawableStartCompat="@drawable/ic_find_replace_deep_orange_400_24dp" />

            <Switch
            android:id="@+id/civ_searchS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text=""

                tools:ignore="UseSwitchCompatOrMaterialXml"
          />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/cv_1"
        tools:layout_editor_absoluteX="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_msg2"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="@string/addfriendtitle"
            app:drawableStartCompat="@drawable/tabmanfans_call_purple_900_24dp" />

        <Switch
            android:id="@+id/civ_joinFriendS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text=""

            tools:ignore="UseSwitchCompatOrMaterialXml"
             />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_3"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/cv_2"
        tools:layout_editor_absoluteX="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_msg3"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="@string/activationswitch"
            app:drawableLeftCompat="@drawable/ic_all_out_purple_900_24dp" />
        <Switch
            android:id="@+id/civ_chatAbleS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text=""
            tools:ignore="UseSwitchCompatOrMaterialXml"
            />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_4"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/cv_3"
        tools:layout_editor_absoluteX="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_msg4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:text="@string/groupsettings"
                app:drawableLeftCompat="@drawable/ic_group_add_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_dashboard_purple_900_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_5"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/cv_4"
        tools:layout_editor_absoluteX="16dp">




  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
          android:id="@+id/tv_msg5"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginStart="16dp"
          android:gravity="center_vertical"
          android:text="@string/securitysettings"
          app:drawableLeftCompat="@drawable/ic_perm_data_setting_purple_900_24dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />




      <ImageView
          android:id="@+id/imageView"
          android:layout_width="38dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="16dp"
          android:src="@drawable/ic_dashboard_purple_900_24dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />


  </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/maninfoPage_bottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"
        android:background="@color/endblue"
        android:theme="@style/MyAppBarLayoutTheme"
        android:layout_marginEnd="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_maninfo_option_nav">

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.constraintlayout.widget.ConstraintLayout>