<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/civ_et_dec"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"

            android:background="@null"
            android:drawableLeft="@drawable/ic_baseline_assignment_24"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/mantitle"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"

            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/civ_et_mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/civ_et_mobile"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginStart="1dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:ems="10"
                android:hint="@string/strtel"
                android:importantForAutofill="no"
                android:inputType="number|phone"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/civ_et_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/civ_et_email"
                app:layout_constraintTop_toTopOf="@+id/civ_et_email" />

            <EditText
                android:id="@+id/civ_et_email"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                android:ems="10"
                android:hint="@string/mailtitle"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <EditText
            android:id="@+id/civ_et_address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"

            android:background="@null"
            android:drawableLeft="@drawable/ic_baseline_room_24"
            android:ems="10"
            android:hint="@string/addrtitle"
            android:importantForAutofill="no"
            android:inputType="textPostalAddress"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>